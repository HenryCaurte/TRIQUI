#include<time.h>

using namespace std;

vector<bool> pos(9,false);

int matriz[3][3] = {-1};
//** analiza si esta lleno o no
bool analisis(){
    int cont  = 0;
    for(int i = 0 ; i <9; i++){
        if(pos[i] == true){
            cont++;
        }
    }
    if(cont == 9){
        return false;
    }

    return true;
}
