        case 1:
        if(matriz[i][0] == -1){
            turnoM(2);
            return 2;
        }
        /*else if(matriz[i][2] == -1){
            turnoM(5);
            return 5;
        }*/
        else if(matriz[i][2] == -1){
            turnoM(8);
            return 8;
        }else{break;}
    break;
        case 2:
        if(matriz[i][0] == -1){
            turnoM(3);
            return 3;
