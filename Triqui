int contador2 = 0;
int contador3 = 0;
srand(time(NULL));
///quitar diagonales
for(int i =0; i <3; i++){
    if(matriz[i][i] == 2){
        contador3++;
    }
    if(contador3 == 2){
        if(matriz[0][0] == -1){
            turnoM(1);
            return 1;
        } else if(matriz[1][1] == -1){
            turnoM(5);
            return 5;
        }
        else if(matriz[2][2] == -1){
            turnoM(9);
            return 9;
        }
        else{break;}
