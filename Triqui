//////////////////////////////////////////////////////// INTERFAZ JUEGO ////////////////////////////////////

void juego(bool sociedad, int n){
initwindow(1000,800,"JUEGO",500,200);
setbkcolor(4);
cleardevice();
readimagefile("Imagenes/Fondo.jpg",0,0,1000,800);

// Barras verticales
setcolor( 4 );
bar(200,100,210,700);
bar(400,100,410,700);
bar(600,100,610,700);
bar(800,100,810,710);
// Barras horizontales
bar(200,100,800,110);
bar(200,300,800,310);
bar(200,500,800,510);
bar(200,700,800,710);
int cont = 0;
if(sociedad == true){
        do{
    tirarH(n);
if(reglas() == 1 || reglas()==2 || !analisis()){
        return;
    }
    tirarM();
if(reglas() == 1 || reglas()==2 || !analisis()){
        return;
    }
}while(true);

}else {
//maquina
 do{
    tirarM();
    if(reglas() == 1 || reglas()==2 || !analisis()){
        return;
    }
    tirarH(n);
if(reglas() == 1 || reglas()==2 || !analisis()){
        return;
    }
}while(true);
}
}


int main(){
    //--------------
    char m;
    bool p;
    //-------------
do{
for(int i = 0; i < 9; i++){
    pos[i] = false;
}

for (int i = 0; i < 3 ; i ++){
    for(int j = 0; j < 3; j++){
        matriz[i][j] = -1; //cambiar  a 0 para humano 1 maquina -1 y sumarlos
    }
}
closegraph();
inicio();
//bienvenido
getch();
closegraph();
bool sociedad = dados();
int n = escoje();
juego(sociedad,n);
//getch();
//ganoelmejor(reglas());

}while(true);

}
