            turnoM(1);
            return 1;
        }else if(matriz[1][i] == -1){
            turnoM(2);
            return 2;
        }else if(matriz[2][i] == -1){
            turnoM(3);
            return 3;
        }
        else{break;}
    break;
        case 1:
        if(matriz[0][i] == -1){
            turnoM(4);
            return 4;
        }
        else if(matriz[1][i] == -1 && !pos[6]){
            turnoM(5);
            return 5;
        }
        else if(matriz[2][i] == -1 ){
            turnoM(6);
            return 6;
        }else{break;}
    break;
